<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center justify-content-between">
            <h3>{{product.title}}</h3>
            
        </div>
        <div class="row">
            <div class="col-4">
                <div class="row ">
                    {{#each product.photos}}
                    <div class="col-6">
                        <img src="/{{this}}" alt="" width="100%">
                    </div>
                    {{/each}}
                </div>
                 

            </div>
              

            <div class="col-8 mt-5">
                {{{product.text}}}
                
            </div>
            <div class="col-12">
                <hr>
            </div>
            <div class="col-4">
                <h3 class="text-center mb-0 mt-3">Данные о товаре</h3>
                <table class="table mt-5">
                    <tbody>
                        <tr>
                            <th><b>Стоимость</b></th>
                            <td>{{product.price}}</td>
                        </tr>
                        <tr>
                            <th><b>Скидка</b></th>
                            <th>{{product.sale}}</th>
                        </tr>
                        <tr>
                            <th><b>Категория</b></th>
                            <th>{{product.category.title}}</th>
                        </tr>
                        <tr>
                            <th><b>Статус</b></th>
                            <th>{{{product.status}}}</th>
                        </tr>
                        <tr>
                            <th><b>Топ товар</b></th>
                            <th>{{{product.top}}}</th>
                        </tr>
                        <tr>
                            <th><b>Новый товар</b></th>
                            <th>{{{product.news}}}</th>
                        </tr>
                        <tr>
                            <th><b>Номер порядки</b></th>
                            <th>{{product.order}}</th>
                        </tr>
                    </tbody>
                </table> 
            </div>
            <div class="col-8">
                <h3 class="text-center mb-0 mt-3">Список отзывов</h3>
                 <table class="table mt-5">
                    <tbody>
                        <th>Имя</th>
                        <th>Время</th>
                        <th>Оценка</th>
                        <th>Заголовка</th>
                        <th>Текст</th>
                        <th>Статус</th>
                    {{#each product.review }}
                      <tr>
            
                            <td>{{name}}</td>
                            
                            <td>{{createdAt}}</td>
                            
                            <td>{{mark}}</td>
                            
                            <td>{{title}}</td>
                            <td>{{text}}</td>
                            
                            <td><a href="/product/review/{{@root.product._id}}/{{@index}}">{{{status}}}</a></td>
                            <td>
                                <a href="/product/delreview/{{@root.product._id}}/{{@index}}" class="btn btn-danger" onclick="return confirm('Вы уверены?')">
                                    <i class="fa fa-times"></i>
                                </a>
                            </td>
                        </tr>
                    {{/each}}
                      
                    </tbody>
                </table> 
            </div>
        </div>
    </div>
</div>